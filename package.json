{
  "name": "web-starter",
  "version": "1.0.1",
  "main": "index.js",
  "description": "Simple Web Starter for Javascript",
  "scripts": {
    "start": "parcel index.html",
    "lint": "eslint \"./src/**/*.js\""
  },
  "keywords": [
    "starter",
    "parcel"
  ],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.12.7",    
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@types/chance": "1.1.0",
    "chance": "1.1.7",
    "confusing-browser-globals": "1.0.10",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",    
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-no-null": "1.0.2",    
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-unicorn": "23.0.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "parcel-bundler": "1.12.4",
    "prettier": "2.2.0",
    "rimraf": "3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ],
    "src/**/*.{json,css}": [
      "yarn prettier --write"
    ]
  }
}
